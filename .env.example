# ==================================================
# Eyebek - Attendance Control System
# Environment Variables Template
# ==================================================

# MongoDB Configuration
MONGODB_CONNECTION_STRING=mongodb://mongodb:27017
MONGODB_CORE_DATABASE=core

# .NET Backend Configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5000

# JWT Configuration (CHANGE IN PRODUCTION!)
JWT_KEY=CHANGE_THIS_TO_A_LONG_SECURE_KEY_IN_PRODUCTION
JWT_ISSUER=Eyebek
JWT_AUDIENCE=Eyebek
JWT_EXP_MINUTES=120

# SuperAdmin Configuration
SUPERADMIN_EMAIL=superadmin@eyebek.com
SUPERADMIN_PASSWORD=SuperAdmin123!
SUPERADMIN_NAME=Super Administrator

# Service URLs (Internal Docker Network)
FACIAL_API_URL=http://facialapi:8000

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000

# PayPal Configuration (Frontend) - Optional
# Get credentials from: https://developer.paypal.com/
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_SECRET_KEY=your_paypal_secret_key_here

# NextAuth Configuration (Frontend) - REQUIRED
# For local development, use the URL below
NEXTAUTH_URL=http://localhost:3000
# For production, use your domain: https://yourdomain.com

# Generate a secure secret with: openssl rand -base64 32
# IMPORTANT: Change this in production!
NEXTAUTH_SECRET=eyebek_super_secret_key_change_in_production_min_32_chars_long

# Ports (for docker-compose port mapping)
BACKEND_PORT=5000
FRONTEND_PORT=3000
FACIALAPI_PORT=8000
MONGODB_PORT=27017
